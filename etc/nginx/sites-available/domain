
server {
    listen 80;
    server_name dripnext.com *.dripnext.com api.dripnext.com panel.dripnext.com;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# API
server {
    listen 443 ssl;
    server_name api.dripnext.com;

ssl_certificate /etc/letsencrypt/live/dripnext.com/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/dripnext.com/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

# Panel
server {
    listen 443 ssl;
    server_name panel.dripnext.com;

ssl_certificate /etc/letsencrypt/live/dripnext.com/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/dripnext.com/privkey.pem;


    location / {
        proxy_pass http://127.0.0.1:5002;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

# Client + wildcard subdomains
server {
    listen 443 ssl;
    server_name dripnext.com *.dripnext.com;

ssl_certificate /etc/letsencrypt/live/dripnext.com/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/dripnext.com/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:5003;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}